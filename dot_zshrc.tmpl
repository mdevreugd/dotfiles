# Path to oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"

# Theme
ZSH_THEME="robbyrussell"

# Plugins
plugins=(git)

source $ZSH/oh-my-zsh.sh

# Homebrew
if [[ -f /opt/homebrew/bin/brew ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# Paths
export PATH="$PATH:$HOME/bin"

# Go
export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# Rust (rustup is keg-only, need to add its bin path)
export PATH="$(brew --prefix rustup)/bin:$PATH"
[[ -f "$HOME/.cargo/env" ]] && source "$HOME/.cargo/env"

# Aliases
alias ll="ls -la"
alias cat="bat"
alias vim="nvim"
alias vi="nvim"
alias tt='terraform fmt -check -diff && terraform validate'
alias tp='terraform plan -lock=false -parallelism=50'
alias tpo='terraform plan -lock=false -parallelism=50 -out tf.plan'
alias ta='terraform apply -parallelism=50'
alias ti='terraform init'
alias tc='terraform console'
alias ts='tfsec -s'
alias tl='tflint --recursive --force'

{{ if .personal }}
# Personal aliases
{{ end }}

source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
ZSH_AUTOSUGGEST_STRATEGY=(history)

source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
ZSH_HIGHLIGHT_HIGHLIGHTERS+=()
